generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int          @id @default(autoincrement())
  name          String
  description  String
  price        Int
  currency     String
  defaultSize  String
  defaultColor String
  sizes        String[]
  colors       String[]
  bestSelling  Boolean
  image        String
  subcategory  String
  rating       Int
  discount     Int
  oldPrice     Int
  tags         String[]
  newArrival   Boolean
  categoryid   Int
  quantity     Int          @default(0)
  
  category     Category     @relation(fields: [categoryid], references: [id])
  receiptItem  ReceiptItem[]
  productCart  ProductCart[]
  Wishlist     Wishlist[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  reviews      Review[]
  productImages ProductImage[]
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  url       String
  color     String?
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  role      Role   @default(USER)
  image     String?
  address   String
  isVerified  Boolean @default(false)
  verificationToken String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // profile_id Int
  // profile profile?
  uuid String @unique @default(uuid()) @db.Uuid
  Cart      Cart?
  Wishlist  Wishlist[]
  reviews   Review[]
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId Int
  Product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

// In one to one the relationship is written in the optional model
// while in one to many, the relationship is written in the child model
